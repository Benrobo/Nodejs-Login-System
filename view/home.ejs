<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login System</title>
    <%- include("inc/styles.ejs"); %>
  </head>
  <body>
    <header class="jumbotron text-white">
      <div class="container">
        <h1>Home Page</h1>
        <p>Welcome <%= name ? name : "" %></p>
        <button class="mt-3 btn btn-danger logout">Logout</button>
      </div>
    </header>

    <script>
      let logbtn = document.querySelector(".logout");

      logbtn.onclick = async () => {
        let res = await fetch("/logout", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            isLogout: true,
          }),
        });
        let data = await res.json()
      };
    </script>
  </body>
</html>
